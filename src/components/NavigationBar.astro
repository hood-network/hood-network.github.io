---
import ProductLogo from "./ProductLogo.astro";

export interface PathFragment {
    path: string;
    content: string;
}

interface Props {
    fragments: PathFragment[];
}

const { fragments } = Astro.props;
---

<nav>
    <div>
        <a href="/">
            <ProductLogo />
        </a>
        {
            fragments.map(({ path, content }) => {
                return (
                    <>
                        <span>&sol;</span>
                        <a href={path}> {content} </a>
                    </>
                );
            })
        }
    </div>
</nav>
<style>
    nav {
        position: sticky;
        top: 2em;
        z-index: 999;
        border-radius: 24px;
        background: var(--hn-sys-grad-card);
        padding: 1px;
        width: 100%;
    }

    nav > div {
        display: flex;
        align-items: center;
        gap: 10px;
        box-sizing: border-box;
        border-radius: inherit;
        background-color: var(--hn-sys-color-accent);
        padding: 10px 15px;
    }

    nav a {
        color: inherit;
        text-decoration: none;
    }

    nav a:nth-child(n + 2):hover {
        text-decoration: underline;
    }

    @media (max-width: 450px) {
        nav :global(.product-logo span) {
            display: none;
        }

        nav :global(.product-logo::after) {
            content: "hn";
            font-family: var(--hn-ref-font-brand);
        }
    }
</style>
