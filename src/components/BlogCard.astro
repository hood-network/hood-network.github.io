---
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"blog">;

const {
    id,
    data: { title, description, date, banner },
} = Astro.props;
---

<a href={`/blog/${id}`}>
    <div class="card">
        <img src={banner} slot="pre-section" alt="post banner" class="banner" />

        <div class="section">
            <span class="publish-date">
                {date.getMonth()}.{date.getDate()}.{date.getFullYear()}
            </span>

            <h1 class="line-clamp">{title}</h1>

            <p class="description line-clamp">
                {description}
            </p>
        </div>
    </div>
</a>
<style>
    a {
        color: inherit;
        text-decoration: none;
    }

    .card {
        --hn-local-shape: var(--hn-sys-shape-medium);

        display: flex;
        position: relative;
        flex-direction: column;
        gap: calc(2 * var(--hn-local-shape));
        box-sizing: border-box;
        border: 1px solid var(--hn-sys-color-outline-variant);
        border-radius: var(--hn-local-shape);
        background-color: var(--hn-sys-color-surface);
        padding: calc(2 * var(--hn-local-shape));
        width: 100%;
        overflow: hidden;
    }

    .section {
        position: relative;
    }

    .line-clamp {
        --hn-local-line-clamp: 1;

        display: -webkit-box;
        -webkit-line-clamp: var(--hn-local-line-clamp);
        -webkit-box-orient: vertical;
        line-clamp: var(--hn-local-line-clamp);
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .section > h1 {
        margin-top: var(--hn-sys-shape-small);
        margin-bottom: var(--hn-sys-shape-medium);
    }

    @media (max-width: 600px) {
        .section > h1 {
            font-size: 1.5em;
        }
    }

    .banner {
        margin: 0 calc(-2 * var(--hn-local-shape));
        margin-top: calc(-2 * var(--hn-local-shape));
        aspect-ratio: 2/1;
        width: calc(100% + (4 * var(--hn-local-shape)));
        object-fit: cover;
    }
</style>
