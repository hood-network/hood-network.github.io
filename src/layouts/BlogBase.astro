---
import NavigationBar, {
    type PathFragment,
} from "@components/NavigationBar.astro";
import Base from "./Base.astro";

interface Props {
    title: string;
    description: string;
    fragments: PathFragment[];
    children: any;
}

const { title, description, fragments } = Astro.props;
---

<Base title={`hood network Â· ${title}`} description={description}>
    <NavigationBar {fragments} />
    <slot />
</Base>

<style>
    body {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4em;
        padding: 2em 8em;
        transition: padding 100ms ease-in-out;
    }

    @media (max-width: 700px) {
        body {
            padding: 2em 4em;
        }
    }

    @media (max-width: 500px) {
        body {
            padding: 2em;
        }
    }
</style>
