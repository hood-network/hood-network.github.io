---
import NavigationBar, {
    type PathFragment,
} from "@components/NavigationBar.astro";
import Base from "./Base.astro";

interface Props {
    title: string;
    description: string;
    banner?: string;
    fragments: PathFragment[];
    children: any;
}

const { title, description, banner, fragments } = Astro.props;
---

<Base
    title={`hood network Â· ${title}`}
    description={description}
    banner={banner}
>
    <NavigationBar {fragments} />
    <slot />
</Base>

<style>
    body {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4em;
        transition: padding 100ms ease-in-out;
        padding: 2em 8em;
        padding-bottom: 8em;
    }

    @media (max-width: 700px) {
        body {
            padding: 2em 4em;
        }
    }

    @media (max-width: 500px) {
        body {
            padding: 2em;
        }
    }

    :global(h1) {
        font-weight: var(--hn-sys-typescale-heading-large-weight);
        font-size: var(--hn-sys-typescale-heading-large-size);
        line-height: var(--hn-sys-typescale-heading-large-line-height);
        font-family: var(--hn-sys-typescale-heading-large-font);
    }

    :global(h2, h3, h4, h5, h6) {
        font-weight: var(--hn-sys-typescale-heading-medium-weight);
        line-height: var(--hn-sys-typescale-heading-medium-line-height);
        font-family: var(--hn-sys-typescale-heading-medium-font);
    }
</style>
