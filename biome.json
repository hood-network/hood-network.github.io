{
    "files": {
        "ignore": [".astro/**", "authors/**"]
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "rules": {
            "complexity": {
                "noBannedTypes": { "level": "off" }
            },
            "correctness": {
                "noUnusedImports": { "level": "error" }
            },
            "performance": {
                "noDelete": { "level": "off" }
            },
            "style": {
                "noNonNullAssertion": { "level": "off" }
            },
            "suspicious": {
                "noConfusingVoidType": { "level": "off" },
                "noEmptyInterface": { "level": "off" },
                "noExplicitAny": { "level": "off" }
            }
        }
    },
    "overrides": [
        {
            "include": ["*.astro"],
            "linter": {
                "rules": {
                    "correctness": {
                        "noUnusedImports": { "level": "off" }
                    }
                }
            }
        }
    ],
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "semicolons": "always",
            "arrowParentheses": "asNeeded"
        }
    }
}
